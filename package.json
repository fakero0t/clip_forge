{
  "name": "clipforge",
  "version": "1.0.0",
  "description": "A streamlined video editing application focused on the essentials: trim, splice, export",
  "main": "electron/main.cjs",
  "author": "ClipForge Team",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:vite & npm run dev:electron",
    "dev:vite": "vite",
    "dev:electron": "sleep 5 && electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.vue",
    "lint:fix": "eslint . --ext .js,.vue --fix",
    "format": "prettier --write \"**/*.{js,vue,json,css,md}\"",
    "test:ffmpeg": "node test-ffmpeg.js"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "electron-mcp-server": "^1.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "pinia": "^2.1.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.clipforge.app",
    "productName": "ClipForge",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video"
    }
  }
}
